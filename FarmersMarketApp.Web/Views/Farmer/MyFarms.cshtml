@using FarmersMarketApp.Web.ViewModels.FarmViewModels
@model IEnumerable<FarmInfoViewModel>

@{
    ViewData["Title"] = "My Farms";
}

<div class="d-flex justify-content-between align-items-center mb-3" style="margin-top: 20px;">
    <h2>@ViewData["Title"]</h2>
    @if (User?.Identity?.IsAuthenticated == true)
    {
        <a asp-controller="Farm" asp-action="Add" class="btn btn-primary"><i class="fas fa-plus"></i>Add Farm</a>
    }
</div>
<hr />

<div class="row text-center">
    @foreach (var farm in Model)
    {
        <div class="col-md-3 mb-4">
            <div class="card h-100" style="width: 100%;">
                @if (!string.IsNullOrEmpty(farm.ImageUrl))
                {
                    <img src="@farm.ImageUrl" class="card-img-top" style="max-height: 150px; object-fit: contain;" alt="@farm.ImageUrl">
                }
                else
                {
                    <img src="/img/no-image.png" class="card-img-top" style="max-height: 150px; object-fit: contain;" alt="No Image Available">
                }

                <div class="card-body d-flex flex-column">
                    <h5 class="card-title">@farm.Name</h5>
                    <p class="card-text">@farm.Address</p>
                    <div class="d-flex justify-content-between mt-auto">
                        @*
                    //TODO: Add check if user is farmer of current farm
                    *@
                        @if (User?.Identity?.IsAuthenticated == true)
                        {
                            <a asp-controller="Farm" asp-action="Details" asp-route-id="@farm.Id" class="btn btn-info me-2 w-50">Details</a>
                            <form asp-controller="Farm" asp-action="Edit" method="post" class="w-50">
                                <input type="hidden" name="id" value="@farm.Id" />
                                <button type="submit" class="btn btn-success w-100">Edit</button>
                            </form>
                        }
                        else
                        {
                            <a asp-controller="Farm" asp-action="Details" asp-route-id="@farm.Id" class="btn btn-info w-100">Details</a>
                        }
                    </div>
                </div>
            </div>
        </div>
    }
</div>