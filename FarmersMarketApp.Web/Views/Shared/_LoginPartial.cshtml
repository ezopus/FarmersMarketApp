@using Microsoft.AspNetCore.Identity
@using FarmersMarketApp.Infrastructure.Data.Models
@using FarmersMarketApp.Services.Contracts
@using FarmersMarketApp.Web.Extensions
@using Microsoft.AspNetCore.Mvc.TagHelpers
@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager
@inject IFarmerService FarmerService

@{
	var currentUserId = User.GetId();
	var firstName = string.Empty;
	if (!string.IsNullOrEmpty(currentUserId))
	{
		firstName = UserManager.Users.FirstOrDefault(u => u.Id == Guid.Parse(currentUserId)).FirstName;
	}
	var isUserFarmer = string.IsNullOrEmpty(await FarmerService.GetFarmerIdByUserIdAsync(User.GetId()));
}

<ul class="navbar-nav">
	@if (SignInManager.IsSignedIn(User))
	{
		<li class="nav-item">
			@if (User.Identity.IsAuthenticated && !string.IsNullOrEmpty(firstName))
			{
				<a class="nav-link text-light" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">Hi, @firstName!</a>
			}
		</li>
		<li class="nav-item">
			<a class="nav-link text-light" asp-controller="Order" asp-action="All">My Orders</a>
		</li>
		if (!isUserFarmer)
		{
			<li class="nav-item d-flex justify-content-center align-items-center fw-bold">
				<a asp-controller="Order" asp-action="All" class="nav-link text-light">
					Cart <i class="fa-solid fa-cart-shopping"></i>
				</a>
			</li>
		}
		<li class="nav-item">
			<form class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home")">
				<button type="submit" class="nav-link btn btn-link text-light">Logout</button>
			</form>
		</li>
	}
	else
	{
		<partial name="Partials/_FarmerLoginPartial" />
	}
</ul>
