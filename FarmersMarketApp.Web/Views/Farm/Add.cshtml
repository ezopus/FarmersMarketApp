@using FarmersMarketApp.Web.ViewModels.FarmViewModels
@model AddFarmViewModel

@{
	ViewData["Title"] = "Become a farmer today!";
}

<div class="container text-center">
	<div class="row justify-content-center">
		<div class="col-6">
			<form asp-action="Add" method="post" enctype="multipart/form-data">
				<div class="mb-2">
					<label asp-for="@Model.Name" class="form-label mt-2">Farm Name*</label>
					<input asp-for="@Model.Name" class="form-control" aria-required="true" type="text" placeholder="name of your farm"/>
					<span asp-validation-for="@Model.Name" class="text-danger"></span>
				</div>
				<div class="mb-2">
					<label asp-for="@Model.Address" class="form-label mt-2">Farm Address*</label>
					<input asp-for="@Model.Address" class="form-control" aria-required="true" placeholder="address for order pickups"/>
					<span asp-validation-for="@Model.Address" class="text-danger"></span>
				</div>
				<div class="mb-2">
					<label asp-for="@Model.City" class="form-label mt-2">City*</label>
					<input asp-for="@Model.City" class="form-control" aria-required="true" placeholder="closest city to farm"/>
					<span asp-validation-for="@Model.City" class="text-danger"></span>
				</div>
				<div class="mb-2">
					<label asp-for="@Model.Email" class="form-label mt-2">Email</label>
					<input asp-for="@Model.Email" class="form-control" aria-required="true" placeholder="optional" />
					<span asp-validation-for="@Model.Email" class="text-danger"></span>
				</div>
				<div class="mb-2">
					<label asp-for="@Model.PhoneNumber" class="form-label mt-2">Phone Number</label>
					<input asp-for="@Model.PhoneNumber" class="form-control" aria-required="true" placeholder="optional" />
				</div>
				<div class="mb-2">
					<label asp-for="@Model.ImageUrl" class="form-label mt-2">Image URL</label>
					<input asp-for="@Model.ImageUrl" class="form-control" aria-required="true" placeholder="optional" />
				</div>
				<div class="mb-2 w-100">
					<div class="mb-2">
						<label asp-for="@Model.OpenHours" class="form-label mt-2 ">Open hours</label>
						<input asp-for="@Model.OpenHours" class="form-control" aria-required="true" placeholder="HH:mm" />
						<span asp-validation-for="@Model.OpenHours" class="text-danger"></span>
					</div>
					<div class="mb-2">
						<label asp-for="@Model.CloseHours" class="form-label mt-2 ">Closed hours</label>
						<input asp-for="@Model.CloseHours" class="form-control" aria-required="true" placeholder="HH:mm" />
						<span asp-validation-for="@Model.CloseHours" class="text-danger"></span>
					</div>
				</div>
				<div class="mb-2 mt-4">
					<input class="btn btn-success btn-white-text w-100 py-2 fw-bold rounded" type="submit" value="Add my new farm" />
				</div>
			</form>
		</div>
	</div>
</div>
<partial name="_ValidationScriptsPartial" />