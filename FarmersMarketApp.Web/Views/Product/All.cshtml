@using FarmersMarketApp.Web.ViewModels.ProductViewModels
@using Microsoft.AspNetCore.Mvc.TagHelpers
@model IEnumerable<ProductInfoViewModel>

@{
	var hasFarmerId = ViewData["farmerId"] != null;
	if (hasFarmerId)
	{
        ViewData["Title"] = $"All products from {ViewData["farmerFullName"]}";
	}
	else
	{
		ViewData["Title"] = "All products";
	}
}
  


<div class="d-flex justify-content-between align-items-center mb-3" style="margin-top: 20px;">
    <h2>@ViewData["Title"]</h2>
    @if (User?.Identity?.IsAuthenticated == true)
    {
        <a asp-controller="Product" asp-action="Add" class="btn btn-primary">Add Product</a>
    }
</div>
<hr />

<div class="row text-center">
    @foreach (var product in Model)
    {
        <div class="col-md-3 mb-5">
            <div class="card h-100" style="width: 100%;">
                @if (!string.IsNullOrEmpty(product.ImageUrl))
                {
                    <img src="@product.ImageUrl" class="card-img-top rounded mt-2" style="max-height:200px; object-fit: cover;" alt="@product.Name">
                }
                else
                {
                    <img src="/img/no-image.png" class="card-img-top" style="max-height: 150px; object-fit: contain;" alt="No Image Available">
                }

                <div class="card-body d-flex flex-column">
                    <h5 class="card-title">@product.Name</h5>
                    <p class="card-text">Price: @product.Price.ToString("C", System.Globalization.CultureInfo.CreateSpecificCulture("bg-BG"))</p>
                    <div class="d-flex justify-content-between mt-auto">
                        @if (User?.Identity?.IsAuthenticated == true)
                        {
                            <a asp-controller="Product" asp-action="Details" asp-route-id="@product.Id" class="btn btn-info me-2 w-50">Details</a>
                            <form asp-controller="Product" asp-action="AddToCart" method="post" class="w-50">
                                <input type="hidden" name="id" value="@product.Id" />
                                <button type="submit" class="btn btn-success w-100">Buy</button>
                            </form>
                        }
                        else
                        {
                            <a asp-controller="Product" asp-action="Details" asp-route-id="@product.Id" class="btn btn-info w-100">Details</a>
                        }
                    </div>
                </div>
            </div>
        </div>
    }
</div>